---
import Layout from '../layouts/Layout.astro';
const base = import.meta.env.BASE_URL;
---

<Layout title="Calendar">
  <section class="page-hero">
    <div class="page-hero-content">
      <h1>Parish Calendar</h1>
      <p>Liturgical celebrations and parish events</p>
    </div>
  </section>

  <section class="calendar-section">
    <div class="container">
      <div class="calendar-wrapper">
        <div id="calendar"></div>
      </div>
      <div class="calendar-legend">
        <div class="legend-item"><span class="legend-icon">‚õ™</span> Divine Liturgy</div>
        <div class="legend-item"><span class="legend-icon">üïØÔ∏è</span> Vespers</div>
        <div class="legend-item"><span class="legend-icon">üìø</span> Matins</div>
        <div class="legend-item"><span class="legend-icon">‚ò¶Ô∏è</span> Major Feast</div>
        <div class="legend-item"><span class="legend-icon">üåπ</span> Theotokos Feast</div>
        <div class="legend-item"><span class="legend-icon">üëë</span> Patron Saint</div>
      </div>
    </div>
  </section>

  <!-- Event Detail Modal -->
  <div id="event-modal" class="event-modal">
    <div class="modal-backdrop"></div>
    <div class="modal-content">
      <button class="modal-close" aria-label="Close">&times;</button>
      <div class="modal-icon" id="modal-icon"></div>
      <h3 class="modal-title" id="modal-title"></h3>
      <div class="modal-details">
        <p class="modal-time" id="modal-time"></p>
        <p class="modal-description" id="modal-description"></p>
      </div>
      <div class="modal-actions" id="modal-actions"></div>
    </div>
  </div>

  <section class="schedule-section">
    <div class="container">
      <h2>Weekly Schedule</h2>
      <div class="decorative-line center"></div>
      <div class="weekly-grid">
        <div class="day-card">
          <div class="day-name">Saturday</div>
          <div class="day-services">
            <div class="service-item">
              <span class="service-time">4:00 PM</span>
              <span class="service-name">Great Vespers</span>
            </div>
            <div class="service-item">
              <span class="service-time">5:00 PM</span>
              <span class="service-name">Confessions</span>
            </div>
          </div>
        </div>
        <div class="day-card primary">
          <div class="day-name">Sunday</div>
          <div class="day-services">
            <div class="service-item">
              <span class="service-time">8:30 AM</span>
              <span class="service-name">Matins</span>
            </div>
            <div class="service-item highlight">
              <span class="service-time">10:00 AM</span>
              <span class="service-name">Divine Liturgy</span>
            </div>
            <div class="service-item">
              <span class="service-time">9:00 AM</span>
              <span class="service-name">Confessions</span>
            </div>
          </div>
        </div>
        <div class="day-card">
          <div class="day-name">Wednesday</div>
          <div class="day-services">
            <div class="service-item">
              <span class="service-time">7:00 PM</span>
              <span class="service-name">Divine Liturgy</span>
            </div>
          </div>
          <div class="day-note">Check calendar for special services</div>
        </div>
      </div>
    </div>
  </section>

  <section class="seasons-section">
    <div class="container">
      <h2>Liturgical Seasons</h2>
      <div class="decorative-line center"></div>
      <div class="seasons-grid">
        <div class="season-card">
          <h3>Great Lent</h3>
          <p>The 40-day fast before Pascha, beginning with Clean Monday. Presanctified Liturgy on Wednesdays and Fridays at 7:00 PM.</p>
        </div>
        <div class="season-card">
          <h3>Pascha (Easter)</h3>
          <p>The Feast of Feasts, celebrating the Resurrection of Our Lord. Preceded by Holy Week services.</p>
        </div>
        <div class="season-card">
          <h3>Dormition Fast</h3>
          <p>August 1-14, preparing for the Feast of the Dormition of the Theotokos.</p>
        </div>
        <div class="season-card">
          <h3>Nativity Fast</h3>
          <p>November 15 - December 24, the 40-day preparation for Christmas.</p>
        </div>
      </div>
    </div>
  </section>

  <section class="cta-section">
    <div class="container">
      <h2>Join Us for Worship</h2>
      <p>All are welcome to experience the beauty of the Byzantine Divine Liturgy.</p>
      <a href={`${base}liturgy`} class="btn btn-primary">View Service Times</a>
    </div>
  </section>
</Layout>

<script>
  import { Calendar } from '@fullcalendar/core';
  import dayGridPlugin from '@fullcalendar/daygrid';
  import listPlugin from '@fullcalendar/list';

  document.addEventListener('DOMContentLoaded', () => {
    const calendarEl = document.getElementById('calendar');
    if (!calendarEl) return;

    const base = '/stbasils/';

    // Modal elements
    const modal = document.getElementById('event-modal');
    const modalIcon = document.getElementById('modal-icon');
    const modalTitle = document.getElementById('modal-title');
    const modalTime = document.getElementById('modal-time');
    const modalDescription = document.getElementById('modal-description');
    const modalActions = document.getElementById('modal-actions');
    const modalClose = document.querySelector('.modal-close');
    const modalBackdrop = document.querySelector('.modal-backdrop');

    function openModal(event: { title: string; start: Date | null; extendedProps: Record<string, unknown> }) {
      const props = event.extendedProps;
      const icon = (props.icon as string) || 'üìÖ';
      const description = (props.description as string) || '';
      const link = (props.link as string) || '';
      const linkText = (props.linkText as string) || 'Learn More';

      if (modalIcon) modalIcon.textContent = icon;
      if (modalTitle) modalTitle.textContent = event.title.replace(/^[^\s]+\s/, ''); // Remove emoji from title

      // Format time
      if (modalTime && event.start) {
        const options: Intl.DateTimeFormatOptions = {
          weekday: 'long',
          month: 'long',
          day: 'numeric',
          hour: 'numeric',
          minute: '2-digit'
        };
        modalTime.textContent = event.start.toLocaleString('en-US', options);
      } else if (modalTime) {
        modalTime.textContent = '';
      }

      if (modalDescription) modalDescription.textContent = description;

      // Add action buttons
      if (modalActions) {
        modalActions.innerHTML = '';
        if (link) {
          const btn = document.createElement('a');
          btn.href = link;
          btn.className = 'modal-btn';
          btn.textContent = linkText;
          modalActions.appendChild(btn);
        }
      }

      modal?.classList.add('open');
      document.body.style.overflow = 'hidden';
    }

    function closeModal() {
      modal?.classList.remove('open');
      document.body.style.overflow = '';
    }

    modalClose?.addEventListener('click', closeModal);
    modalBackdrop?.addEventListener('click', closeModal);
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') closeModal();
    });

    // Generate recurring events for the year
    const currentYear = new Date().getFullYear();
    const events: Array<{
      title: string;
      start?: string;
      daysOfWeek?: number[];
      startTime?: string;
      color: string;
      textColor?: string;
      extendedProps: {
        icon: string;
        description: string;
        link?: string;
        linkText?: string;
      };
    }> = [];

    // Weekly recurring events
    // Sundays (0)
    events.push({
      title: '‚õ™ Divine Liturgy',
      daysOfWeek: [0],
      startTime: '10:00',
      color: '#1A2744',
      extendedProps: {
        icon: '‚õ™',
        description: 'The Divine Liturgy of St. John Chrysostom is the principal worship service of the Byzantine Church. Confessions available from 9:00-9:30 AM.',
        link: `${base}liturgy`,
        linkText: 'View Liturgy Details',
      },
    });
    events.push({
      title: 'üìø Matins',
      daysOfWeek: [0],
      startTime: '08:30',
      color: '#2A3A5A',
      extendedProps: {
        icon: 'üìø',
        description: 'Morning prayer service preparing the faithful for the Divine Liturgy. Features psalms, hymns, and scripture readings.',
        link: `${base}liturgy`,
        linkText: 'View Service Times',
      },
    });

    // Saturdays (6)
    events.push({
      title: 'üïØÔ∏è Great Vespers',
      daysOfWeek: [6],
      startTime: '16:00',
      color: '#1A2744',
      extendedProps: {
        icon: 'üïØÔ∏è',
        description: 'Evening prayer service welcoming the Lord\'s Day. A beautiful service of psalms, hymns, and evening prayers. Confessions available afterward.',
        link: `${base}liturgy`,
        linkText: 'View Service Times',
      },
    });

    // Wednesdays (3)
    events.push({
      title: '‚õ™ Divine Liturgy',
      daysOfWeek: [3],
      startTime: '19:00',
      color: '#2A3A5A',
      extendedProps: {
        icon: '‚õ™',
        description: 'Weekday evening Divine Liturgy. Check the schedule for specific dates.',
        link: `${base}liturgy`,
        linkText: 'View Liturgy Details',
      },
    });

    // Fixed feasts (for current and next year)
    const feasts = [
      { month: 1, day: 1, icon: 'üëë', title: 'üëë Feast of St. Basil the Great', color: '#722F37', description: 'Our parish patron saint, one of the greatest Fathers of the Church. St. Basil is known for his theological writings, monastic rule, and care for the poor.' },
      { month: 1, day: 6, icon: '‚ò¶Ô∏è', title: '‚ò¶Ô∏è Theophany', color: '#C9A227', description: 'The Baptism of Our Lord in the Jordan River by St. John the Baptist. One of the Twelve Great Feasts. Blessing of water takes place after the Divine Liturgy.' },
      { month: 1, day: 7, icon: '‚ò¶Ô∏è', title: '‚ò¶Ô∏è Synaxis of St. John the Baptist', color: '#C9A227', description: 'We honor St. John the Baptist, the Forerunner of Christ, the day after Theophany.' },
      { month: 2, day: 2, icon: '‚ò¶Ô∏è', title: '‚ò¶Ô∏è Encounter of Our Lord', color: '#C9A227', description: 'The Presentation of Christ in the Temple, 40 days after His birth. Simeon and Anna recognize the Messiah. Blessing of candles.' },
      { month: 3, day: 25, icon: 'üôè', title: 'üôè Annunciation', color: '#C9A227', description: 'The Archangel Gabriel announces to the Virgin Mary that she will conceive and bear the Son of God. One of the Twelve Great Feasts.' },
      { month: 8, day: 6, icon: '‚ú®', title: '‚ú® Transfiguration', color: '#C9A227', description: 'Christ reveals His divine glory to Peter, James, and John on Mount Tabor. Blessing of fruits and grapes.' },
      { month: 8, day: 15, icon: 'üåπ', title: 'üåπ Dormition of the Theotokos', color: '#C9A227', description: 'The "falling asleep" of the Virgin Mary and her bodily assumption into heaven. One of the greatest feasts of the Church year.' },
      { month: 9, day: 8, icon: 'üåπ', title: 'üåπ Nativity of the Theotokos', color: '#C9A227', description: 'The birth of the Blessed Virgin Mary to Sts. Joachim and Anna. The beginning of the Church liturgical year.' },
      { month: 9, day: 14, icon: '‚úùÔ∏è', title: '‚úùÔ∏è Exaltation of the Holy Cross', color: '#C9A227', description: 'Commemorates the finding of the True Cross by St. Helena in Jerusalem and its elevation for veneration by all the faithful.' },
      { month: 11, day: 21, icon: 'üåπ', title: 'üåπ Entrance of the Theotokos', color: '#C9A227', description: 'The young Virgin Mary is presented in the Temple by her parents, Joachim and Anna, and dedicated to God\'s service.' },
      { month: 12, day: 24, icon: 'üçû', title: 'üçû Christmas Eve - Holy Supper', color: '#C9A227', description: 'The traditional Svjata Veƒçera (Holy Supper) - a meatless meal of twelve dishes representing the twelve apostles. A beautiful family tradition.' },
      { month: 12, day: 25, icon: '‚≠ê', title: '‚≠ê Nativity of Our Lord', color: '#C9A227', description: 'Christmas - the birth of Jesus Christ in Bethlehem. The Divine Liturgy celebrates God becoming man for our salvation.' },
    ];

    // Add feasts for current and next year
    [currentYear, currentYear + 1].forEach(year => {
      feasts.forEach(feast => {
        const month = String(feast.month).padStart(2, '0');
        const day = String(feast.day).padStart(2, '0');
        events.push({
          title: feast.title,
          start: `${year}-${month}-${day}`,
          color: feast.color,
          textColor: feast.color === '#C9A227' ? '#1A2744' : '#fff',
          extendedProps: {
            icon: feast.icon,
            description: feast.description,
          },
        });
      });
    });

    const calendar = new Calendar(calendarEl, {
      plugins: [dayGridPlugin, listPlugin],
      initialView: 'dayGridMonth',
      headerToolbar: {
        left: 'prev,next today',
        center: 'title',
        right: 'dayGridMonth,listMonth'
      },
      buttonText: {
        today: 'Today',
        month: 'Month',
        list: 'List'
      },
      events: events,
      eventClick: (info) => {
        info.jsEvent.preventDefault();
        openModal(info.event);
      },
      height: 'auto',
      fixedWeekCount: false,
    });

    calendar.render();
  });
</script>

