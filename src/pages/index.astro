---
import Layout from '../layouts/Layout.astro';
const base = import.meta.env.BASE_URL;
---

<Layout title="Welcome">
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-bg"></div>
    <div class="hero-overlay"></div>
    <div class="hero-content">
      <p class="hero-subtitle">Welcome to</p>
      <h1>St. Basil the Great</h1>
      <p class="hero-tagline">Byzantine Catholic Church</p>
      <p class="hero-location">Irving, Texas</p>
      <div class="hero-cross">‚ò¶</div>
      <div class="hero-buttons">
        <a href={`${base}liturgy`} class="btn btn-primary">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
          Liturgy Times
        </a>
        <a href={`${base}about`} class="btn btn-secondary">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M12 16v-4"/><path d="M12 8h.01"/></svg>
          Learn More
        </a>
      </div>
    </div>
  </section>

  <!-- Quick Info Section -->
  <section class="quick-info">
    <div class="container">
      <div class="info-cards">
        <div class="info-card">
          <div class="info-icon">‚õ™</div>
          <h3>Sunday Divine Liturgy</h3>
          <p class="info-time">10:00 AM</p>
          <p>Confessions: 9:00-9:30 AM</p>
        </div>
        <div class="info-card">
          <div class="info-icon">üïØ</div>
          <h3>Saturday Vespers</h3>
          <p class="info-time">4:00 PM</p>
          <p>Great Vespers & Confessions</p>
        </div>
        <div class="info-card">
          <div class="info-icon">üìç</div>
          <h3>Our Location</h3>
          <p class="info-address">1118 E. Union Bower Road</p>
          <p>Irving, TX 75061</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Welcome Message -->
  <section class="welcome-section">
    <div class="container">
      <div class="welcome-content">
        <div class="welcome-image">
          <img src="https://images.unsplash.com/photo-1555992457-b8fefdd09069?w=600&h=800&fit=crop" alt="Church interior with candles" loading="lazy" />
          <div class="welcome-image-overlay">
            <span class="welcome-cross">‚ò¶</span>
          </div>
        </div>
        <div class="welcome-text">
          <h2>Come and See</h2>
          <div class="decorative-line"></div>
          <p class="lead">
            We are a vibrant Eastern Catholic community in the heart of the Dallas-Fort Worth Metroplex,
            united in the ancient Byzantine tradition and in full communion with the Holy See in Rome.
          </p>
          <p>
            Whether you are new to the Byzantine tradition or returning home, we invite you to experience
            the beauty of our liturgical worship, the warmth of our community, and the richness of our
            Eastern Christian heritage.
          </p>
          <p>
            Our parish offers a place where faith comes alive through sacred liturgy, iconography,
            sacred music, and the timeless traditions of the Eastern Church.
          </p>
          <a href={`${base}about`} class="btn btn-outline">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/><path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/></svg>
            Discover Our Faith
          </a>
        </div>
      </div>
      <div class="welcome-quote">
        <blockquote>
          "The glory of God is a human being fully alive, and the life of humanity consists in the vision of God."
        </blockquote>
        <cite>‚Äî St. Irenaeus of Lyon</cite>
      </div>
    </div>
  </section>

  <!-- Patron Saint Section -->
  <section class="patron-section">
    <div class="container">
      <div class="patron-content">
        <div class="patron-image">
          <img src="https://upload.wikimedia.org/wikipedia/commons/0/04/Basil_of_Caesarea.jpg" alt="Icon of St. Basil the Great" loading="lazy" />
          <div class="patron-image-frame"></div>
        </div>
        <div class="patron-text">
          <h2>Our Patron Saint</h2>
          <div class="decorative-line"></div>
          <h3>St. Basil the Great</h3>
          <p class="patron-dates">330 ‚Äì 379 AD</p>
          <p class="lead">
            Bishop of Caesarea, Doctor of the Church, and one of the Cappadocian Fathers,
            St. Basil is revered as one of the greatest theologians and monastics in Christian history.
          </p>
          <p>
            Known for his care for the poor and his defense of the faith against Arianism,
            St. Basil established hospitals, hospices, and institutions for the needy. His monastic rule
            continues to guide Eastern monasticism to this day.
          </p>
          <p class="feast-day">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="18" x="3" y="4" rx="2" ry="2"/><line x1="16" x2="16" y1="2" y2="6"/><line x1="8" x2="8" y1="2" y2="6"/><line x1="3" x2="21" y1="10" y2="10"/></svg>
            Feast Day: January 1st
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Pastor Section -->
  <section class="pastor-section">
    <div class="container">
      <div class="pastor-content">
        <div class="pastor-info">
          <h2>Our Pastor</h2>
          <div class="decorative-line"></div>
          <h3>Very Rev. Fr. Elias L. Rafaj, SEOL</h3>
          <p class="pastor-title">Administrator</p>
          <p>
            Father Elias shepherds our community with dedication to the Byzantine Catholic tradition
            and a deep love for the faithful entrusted to his care.
          </p>
          <h4>Clergy</h4>
          <ul class="clergy-list">
            <li>Deacon Craig Anderson</li>
            <li>Deacon Andrew Gill</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="features-section">
    <div class="container">
      <h2>Experience the Byzantine Tradition</h2>
      <div class="decorative-line center"></div>
      <div class="features-grid">
        <div class="feature">
          <div class="feature-image">
            <img src="https://images.unsplash.com/photo-1507838153414-b4b713384a76?w=400&h=300&fit=crop" alt="Sacred music and chanting" loading="lazy" />
          </div>
          <div class="feature-content">
            <div class="feature-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 18V5l12-2v13"/><circle cx="6" cy="18" r="3"/><circle cx="18" cy="16" r="3"/></svg>
            </div>
            <h3>Sacred Music</h3>
            <p>Ancient chant traditions that lift the soul to heaven through timeless melodies.</p>
          </div>
        </div>
        <div class="feature">
          <div class="feature-image">
            <img src="https://images.unsplash.com/photo-1544967082-d9d25d867d66?w=400&h=300&fit=crop" alt="Byzantine iconography" loading="lazy" />
          </div>
          <div class="feature-content">
            <div class="feature-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="18" x="3" y="3" rx="2" ry="2"/><circle cx="9" cy="9" r="2"/><path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"/></svg>
            </div>
            <h3>Holy Icons</h3>
            <p>Windows to heaven‚Äîour church is adorned with beautiful iconography completed in 1993.</p>
          </div>
        </div>
        <div class="feature">
          <div class="feature-image">
            <img src="https://images.unsplash.com/photo-1548625149-fc4a29cf7092?w=400&h=300&fit=crop" alt="Ancient church tradition" loading="lazy" />
          </div>
          <div class="feature-content">
            <div class="feature-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2v20"/><path d="M2 12h20"/><path d="m4.93 4.93 14.14 14.14"/><path d="m19.07 4.93-14.14 14.14"/></svg>
            </div>
            <h3>Living Tradition</h3>
            <p>The unbroken faith of the Apostles, preserved and passed down through the ages.</p>
          </div>
        </div>
        <div class="feature">
          <div class="feature-image">
            <img src="https://images.unsplash.com/photo-1529070538774-1843cb3265df?w=400&h=300&fit=crop" alt="Parish community gathering" loading="lazy" />
          </div>
          <div class="feature-content">
            <div class="feature-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
            </div>
            <h3>Community</h3>
            <p>A welcoming family of believers growing together in faith and fellowship.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="cta-section">
    <div class="container">
      <h2>Join Us This Sunday</h2>
      <p>Divine Liturgy begins at 10:00 AM. All are welcome.</p>
      <a href={`${base}contact`} class="btn btn-primary btn-large">Get Directions</a>
    </div>
  </section>
</Layout>

<style>
  /* Hero Section */
  .hero {
    position: relative;
    min-height: 90vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    background-image: url('https://images.unsplash.com/photo-1548625361-1adecf6c10cf?w=1920&q=80');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .hero-bg::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(74, 31, 36, 0.92) 0%, rgba(114, 47, 55, 0.88) 50%, rgba(26, 39, 68, 0.92) 100%);
  }

  .hero::after {
    content: '';
    position: absolute;
    inset: 0;
    background: url("data:image/svg+xml,%3Csvg width='80' height='80' viewBox='0 0 80 80' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='%23C9A227' fill-opacity='0.07'%3E%3C!-- Jerusalem Cross: Central cross potent --%3E%3Crect x='36' y='20' width='8' height='40'/%3E%3Crect x='20' y='36' width='40' height='8'/%3E%3Crect x='32' y='20' width='4' height='4'/%3E%3Crect x='44' y='20' width='4' height='4'/%3E%3Crect x='32' y='56' width='4' height='4'/%3E%3Crect x='44' y='56' width='4' height='4'/%3E%3Crect x='20' y='32' width='4' height='4'/%3E%3Crect x='20' y='44' width='4' height='4'/%3E%3Crect x='56' y='32' width='4' height='4'/%3E%3Crect x='56' y='44' width='4' height='4'/%3E%3C!-- Four small crosses --%3E%3Crect x='26' y='28' width='2' height='6'/%3E%3Crect x='24' y='30' width='6' height='2'/%3E%3Crect x='52' y='28' width='2' height='6'/%3E%3Crect x='50' y='30' width='6' height='2'/%3E%3Crect x='26' y='46' width='2' height='6'/%3E%3Crect x='24' y='48' width='6' height='2'/%3E%3Crect x='52' y='46' width='2' height='6'/%3E%3Crect x='50' y='48' width='6' height='2'/%3E%3C/g%3E%3C/svg%3E");
    pointer-events: none;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: radial-gradient(ellipse at center, transparent 0%, rgba(0,0,0,0.3) 100%);
  }

  .hero-content {
    position: relative;
    z-index: 1;
    color: var(--text-light);
    padding: 2rem;
    max-width: 800px;
  }

  .hero-subtitle {
    font-size: 1.3rem;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    opacity: 0.9;
    margin-bottom: 1rem;
  }

  .hero h1 {
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    color: var(--gold);
    text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    margin-bottom: 0.5rem;
  }

  .hero-tagline {
    font-size: 1.5rem;
    font-style: italic;
    margin-bottom: 0.25rem;
  }

  .hero-location {
    font-size: 1.2rem;
    letter-spacing: 0.2em;
    opacity: 0.9;
  }

  .hero-cross {
    font-size: 4rem;
    color: var(--gold);
    margin: 2rem 0;
    text-shadow: 0 0 30px rgba(201, 162, 39, 0.5);
  }

  .hero-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Buttons */
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    font-family: 'Cinzel', serif;
    font-size: 0.95rem;
    letter-spacing: 0.05em;
    border-radius: 4px;
    transition: all 0.3s ease;
    cursor: pointer;
    text-align: center;
  }

  .btn svg {
    flex-shrink: 0;
  }

  .btn-primary {
    background: var(--gold);
    color: var(--navy);
    border: 2px solid var(--gold);
  }

  .btn-primary:hover {
    background: var(--gold-light);
    border-color: var(--gold-light);
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(201, 162, 39, 0.4);
  }

  .btn-secondary {
    background: transparent;
    color: var(--text-light);
    border: 2px solid var(--text-light);
  }

  .btn-secondary:hover {
    background: var(--text-light);
    color: var(--navy);
    transform: translateY(-2px);
  }

  .btn-outline {
    background: transparent;
    color: var(--burgundy);
    border: 2px solid var(--burgundy);
  }

  .btn-outline:hover {
    background: var(--burgundy);
    color: var(--text-light);
    transform: translateY(-2px);
  }

  .btn-large {
    padding: 1.25rem 3rem;
    font-size: 1.1rem;
  }

  /* Container */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Quick Info Section */
  .quick-info {
    background: var(--navy);
    padding: 4rem 2rem;
    margin-top: -4rem;
    position: relative;
    z-index: 10;
  }

  .info-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .info-card {
    background: var(--white);
    padding: 2.5rem;
    border-radius: 8px;
    text-align: center;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    transition: transform 0.3s ease;
  }

  .info-card:hover {
    transform: translateY(-5px);
  }

  .info-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .info-card h3 {
    color: var(--navy);
    font-size: 1.2rem;
    margin-bottom: 0.75rem;
  }

  .info-time, .info-address {
    color: var(--burgundy);
    font-size: 1.4rem;
    font-weight: 600;
  }

  .info-card p {
    color: var(--text-dark);
    opacity: 0.8;
    margin-top: 0.5rem;
  }

  /* Welcome Section */
  .welcome-section {
    padding: 6rem 2rem;
    background: var(--cream);
  }

  .welcome-content {
    display: grid;
    grid-template-columns: 400px 1fr;
    gap: 4rem;
    align-items: center;
    margin-bottom: 4rem;
  }

  .welcome-image {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0,0,0,0.2);
  }

  .welcome-image img {
    width: 100%;
    height: 500px;
    object-fit: cover;
    display: block;
  }

  .welcome-image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(26, 39, 68, 0.7) 0%, transparent 50%);
    display: flex;
    align-items: flex-end;
    justify-content: center;
    padding-bottom: 2rem;
  }

  .welcome-cross {
    font-size: 3rem;
    color: var(--gold);
    text-shadow: 0 2px 10px rgba(0,0,0,0.3);
  }

  .welcome-text h2 {
    font-size: 2.5rem;
    color: var(--burgundy);
    margin-bottom: 1rem;
  }

  .decorative-line {
    width: 80px;
    height: 3px;
    background: var(--gold);
    margin-bottom: 2rem;
  }

  .decorative-line.center {
    margin-left: auto;
    margin-right: auto;
  }

  .welcome-text .lead {
    font-size: 1.25rem;
    color: var(--burgundy-dark);
    margin-bottom: 1.5rem;
  }

  .welcome-text p {
    margin-bottom: 1.5rem;
    color: var(--text-dark);
  }

  .welcome-quote {
    background: linear-gradient(135deg, var(--burgundy) 0%, var(--burgundy-dark) 100%);
    padding: 3rem;
    border-radius: 12px;
    color: var(--text-light);
    text-align: center;
    position: relative;
  }

  .welcome-quote::before {
    content: '"';
    position: absolute;
    top: 1rem;
    left: 2rem;
    font-size: 6rem;
    color: var(--gold);
    opacity: 0.3;
    font-family: Georgia, serif;
    line-height: 1;
  }

  .welcome-quote blockquote {
    font-size: 1.5rem;
    font-style: italic;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .welcome-quote cite {
    color: var(--gold);
    font-style: normal;
    font-family: 'Cinzel', serif;
  }

  /* Patron Saint Section */
  .patron-section {
    padding: 6rem 2rem;
    background: var(--white);
  }

  .patron-content {
    display: grid;
    grid-template-columns: 350px 1fr;
    gap: 4rem;
    align-items: center;
  }

  .patron-image {
    position: relative;
  }

  .patron-image img {
    width: 100%;
    border-radius: 8px;
    box-shadow: 0 20px 60px rgba(0,0,0,0.2);
  }

  .patron-image-frame {
    position: absolute;
    inset: -12px;
    border: 3px solid var(--gold);
    border-radius: 12px;
    pointer-events: none;
  }

  .patron-text h2 {
    font-size: 2.2rem;
    color: var(--burgundy);
    margin-bottom: 1rem;
  }

  .patron-text h3 {
    font-size: 1.8rem;
    color: var(--navy);
    margin-bottom: 0.5rem;
  }

  .patron-dates {
    color: var(--gold);
    font-style: italic;
    font-size: 1.1rem;
    margin-bottom: 1.5rem;
    font-weight: 600;
  }

  .patron-text .lead {
    font-size: 1.15rem;
    color: var(--burgundy-dark);
    margin-bottom: 1rem;
  }

  .patron-text p {
    margin-bottom: 1rem;
    line-height: 1.8;
  }

  .feast-day {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--cream);
    padding: 0.75rem 1.25rem;
    border-radius: 6px;
    font-weight: 600;
    color: var(--burgundy);
    margin-top: 0.5rem;
  }

  .feast-day svg {
    color: var(--gold);
  }

  /* Pastor Section */
  .pastor-section {
    padding: 6rem 2rem;
    background: var(--cream);
  }

  .pastor-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .pastor-info h2 {
    font-size: 2.5rem;
    color: var(--burgundy);
    margin-bottom: 1rem;
  }

  .pastor-info h3 {
    font-size: 1.8rem;
    color: var(--navy);
    margin-top: 2rem;
    margin-bottom: 0.5rem;
  }

  .pastor-title {
    color: var(--gold);
    font-style: italic;
    font-size: 1.2rem;
    margin-bottom: 1.5rem;
  }

  .pastor-info h4 {
    color: var(--burgundy);
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-size: 1.3rem;
  }

  .clergy-list {
    list-style: none;
    display: flex;
    gap: 2rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .clergy-list li {
    color: var(--text-dark);
  }

  /* Features Section */
  .features-section {
    padding: 6rem 2rem;
    background: var(--cream);
    text-align: center;
  }

  .features-section h2 {
    font-size: 2.5rem;
    color: var(--burgundy);
    margin-bottom: 1rem;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-top: 4rem;
  }

  .feature {
    background: var(--white);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .feature:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(0,0,0,0.15);
  }

  .feature-image {
    height: 180px;
    overflow: hidden;
  }

  .feature-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .feature:hover .feature-image img {
    transform: scale(1.08);
  }

  .feature-content {
    padding: 1.5rem;
  }

