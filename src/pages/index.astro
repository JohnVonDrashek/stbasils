---
import Layout from '../layouts/Layout.astro';
const base = import.meta.env.BASE_URL;
---

<Layout title="Welcome">
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-overlay"></div>
    <div class="hero-content">
      <p class="hero-subtitle">Welcome to</p>
      <h1>St. Basil the Great</h1>
      <p class="hero-tagline">Byzantine Catholic Church</p>
      <p class="hero-location">Irving, Texas</p>
      <div class="hero-cross">‚ò¶</div>
      <div class="hero-buttons">
        <a href={`${base}liturgy`} class="btn btn-primary">Liturgy Times</a>
        <a href={`${base}about`} class="btn btn-secondary">Learn More</a>
      </div>
    </div>
  </section>

  <!-- Quick Info Section -->
  <section class="quick-info">
    <div class="container">
      <div class="info-cards">
        <div class="info-card">
          <div class="info-icon">‚õ™</div>
          <h3>Sunday Divine Liturgy</h3>
          <p class="info-time">10:00 AM</p>
          <p>Confessions: 9:00-9:30 AM</p>
        </div>
        <div class="info-card">
          <div class="info-icon">üïØ</div>
          <h3>Saturday Vespers</h3>
          <p class="info-time">4:00 PM</p>
          <p>Great Vespers & Confessions</p>
        </div>
        <div class="info-card">
          <div class="info-icon">üìç</div>
          <h3>Our Location</h3>
          <p class="info-address">1118 E. Union Bower Road</p>
          <p>Irving, TX 75061</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Welcome Message -->
  <section class="welcome-section">
    <div class="container">
      <div class="welcome-content">
        <div class="welcome-text">
          <h2>Come and See</h2>
          <div class="decorative-line"></div>
          <p class="lead">
            We are a vibrant Eastern Catholic community in the heart of the Dallas-Fort Worth Metroplex,
            united in the ancient Byzantine tradition and in full communion with the Holy See in Rome.
          </p>
          <p>
            Whether you are new to the Byzantine tradition or returning home, we invite you to experience
            the beauty of our liturgical worship, the warmth of our community, and the richness of our
            Eastern Christian heritage.
          </p>
          <p>
            Our parish offers a place where faith comes alive through sacred liturgy, iconography,
            sacred music, and the timeless traditions of the Eastern Church.
          </p>
          <a href={`${base}about`} class="btn btn-outline">Discover Our Faith</a>
        </div>
        <div class="welcome-quote">
          <blockquote>
            "The glory of God is a human being fully alive, and the life of humanity consists in the vision of God."
          </blockquote>
          <cite>‚Äî St. Irenaeus of Lyon</cite>
        </div>
      </div>
    </div>
  </section>

  <!-- Pastor Section -->
  <section class="pastor-section">
    <div class="container">
      <div class="pastor-content">
        <div class="pastor-info">
          <h2>Our Pastor</h2>
          <div class="decorative-line"></div>
          <h3>Very Rev. Fr. Elias L. Rafaj, SEOL</h3>
          <p class="pastor-title">Administrator</p>
          <p>
            Father Elias shepherds our community with dedication to the Byzantine Catholic tradition
            and a deep love for the faithful entrusted to his care.
          </p>
          <h4>Clergy</h4>
          <ul class="clergy-list">
            <li>Deacon Craig Anderson</li>
            <li>Deacon Andrew Gill</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="features-section">
    <div class="container">
      <h2>Experience the Byzantine Tradition</h2>
      <div class="decorative-line center"></div>
      <div class="features-grid">
        <div class="feature">
          <div class="feature-icon">üéµ</div>
          <h3>Sacred Music</h3>
          <p>Ancient chant traditions that lift the soul to heaven through timeless melodies.</p>
        </div>
        <div class="feature">
          <div class="feature-icon">üñº</div>
          <h3>Holy Icons</h3>
          <p>Windows to heaven‚Äîour church is adorned with beautiful iconography completed in 1993.</p>
        </div>
        <div class="feature">
          <div class="feature-icon">üìø</div>
          <h3>Living Tradition</h3>
          <p>The unbroken faith of the Apostles, preserved and passed down through the ages.</p>
        </div>
        <div class="feature">
          <div class="feature-icon">üë®‚Äçüë©‚Äçüëß‚Äçüë¶</div>
          <h3>Community</h3>
          <p>A welcoming family of believers growing together in faith and fellowship.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="cta-section">
    <div class="container">
      <h2>Join Us This Sunday</h2>
      <p>Divine Liturgy begins at 10:00 AM. All are welcome.</p>
      <a href={`${base}contact`} class="btn btn-primary btn-large">Get Directions</a>
    </div>
  </section>
</Layout>

<style>
  /* Hero Section */
  .hero {
    position: relative;
    min-height: 90vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    background: linear-gradient(135deg, var(--burgundy-dark) 0%, var(--burgundy) 50%, var(--navy) 100%);
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23C9A227' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: radial-gradient(ellipse at center, transparent 0%, rgba(0,0,0,0.4) 100%);
  }

  .hero-content {
    position: relative;
    z-index: 1;
    color: var(--text-light);
    padding: 2rem;
    max-width: 800px;
  }

  .hero-subtitle {
    font-size: 1.3rem;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    opacity: 0.9;
    margin-bottom: 1rem;
  }

  .hero h1 {
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    color: var(--gold);
    text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    margin-bottom: 0.5rem;
  }

  .hero-tagline {
    font-size: 1.5rem;
    font-style: italic;
    margin-bottom: 0.25rem;
  }

  .hero-location {
    font-size: 1.2rem;
    letter-spacing: 0.2em;
    opacity: 0.9;
  }

  .hero-cross {
    font-size: 4rem;
    color: var(--gold);
    margin: 2rem 0;
    text-shadow: 0 0 30px rgba(201, 162, 39, 0.5);
  }

  .hero-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Buttons */
  .btn {
    display: inline-block;
    padding: 1rem 2rem;
    font-family: 'Cinzel', serif;
    font-size: 0.95rem;
    letter-spacing: 0.05em;
    border-radius: 4px;
    transition: all 0.3s ease;
    cursor: pointer;
    text-align: center;
  }

  .btn-primary {
    background: var(--gold);
    color: var(--navy);
    border: 2px solid var(--gold);
  }

  .btn-primary:hover {
    background: var(--gold-light);
    border-color: var(--gold-light);
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(201, 162, 39, 0.4);
  }

  .btn-secondary {
    background: transparent;
    color: var(--text-light);
    border: 2px solid var(--text-light);
  }

  .btn-secondary:hover {
    background: var(--text-light);
    color: var(--navy);
    transform: translateY(-2px);
  }

  .btn-outline {
    background: transparent;
    color: var(--burgundy);
    border: 2px solid var(--burgundy);
  }

  .btn-outline:hover {
    background: var(--burgundy);
    color: var(--text-light);
    transform: translateY(-2px);
  }

  .btn-large {
    padding: 1.25rem 3rem;
    font-size: 1.1rem;
  }

  /* Container */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Quick Info Section */
  .quick-info {
    background: var(--navy);
    padding: 4rem 2rem;
    margin-top: -4rem;
    position: relative;
    z-index: 10;
  }

  .info-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .info-card {
    background: var(--white);
    padding: 2.5rem;
    border-radius: 8px;
    text-align: center;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    transition: transform 0.3s ease;
  }

  .info-card:hover {
    transform: translateY(-5px);
  }

  .info-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .info-card h3 {
    color: var(--navy);
    font-size: 1.2rem;
    margin-bottom: 0.75rem;
  }

  .info-time, .info-address {
    color: var(--burgundy);
    font-size: 1.4rem;
    font-weight: 600;
  }

  .info-card p {
    color: var(--text-dark);
    opacity: 0.8;
    margin-top: 0.5rem;
  }

  /* Welcome Section */
  .welcome-section {
    padding: 6rem 2rem;
    background: var(--cream);
  }

  .welcome-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .welcome-text h2 {
    font-size: 2.5rem;
    color: var(--burgundy);
    margin-bottom: 1rem;
  }

  .decorative-line {
    width: 80px;
    height: 3px;
    background: var(--gold);
    margin-bottom: 2rem;
  }

  .decorative-line.center {
    margin-left: auto;
    margin-right: auto;
  }

  .welcome-text .lead {
    font-size: 1.25rem;
    color: var(--burgundy-dark);
    margin-bottom: 1.5rem;
  }

  .welcome-text p {
    margin-bottom: 1.5rem;
    color: var(--text-dark);
  }

  .welcome-quote {
    background: linear-gradient(135deg, var(--burgundy) 0%, var(--burgundy-dark) 100%);
    padding: 3rem;
    border-radius: 8px;
    color: var(--text-light);
  }

  .welcome-quote blockquote {
    font-size: 1.5rem;
    font-style: italic;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .welcome-quote cite {
    color: var(--gold);
    font-style: normal;
    font-family: 'Cinzel', serif;
  }

  /* Pastor Section */
  .pastor-section {
    padding: 6rem 2rem;
    background: var(--white);
  }

  .pastor-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .pastor-info h2 {
    font-size: 2.5rem;
    color: var(--burgundy);
    margin-bottom: 1rem;
  }

  .pastor-info h3 {
    font-size: 1.8rem;
    color: var(--navy);
    margin-top: 2rem;
    margin-bottom: 0.5rem;
  }

  .pastor-title {
    color: var(--gold);
    font-style: italic;
    font-size: 1.2rem;
    margin-bottom: 1.5rem;
  }

  .pastor-info h4 {
    color: var(--burgundy);
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-size: 1.3rem;
  }

  .clergy-list {
    list-style: none;
    display: flex;
    gap: 2rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .clergy-list li {
    color: var(--text-dark);
  }

  /* Features Section */
  .features-section {
    padding: 6rem 2rem;
    background: var(--cream);
    text-align: center;
  }

  .features-section h2 {
    font-size: 2.5rem;
    color: var(--burgundy);
    margin-bottom: 1rem;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
    margin-top: 4rem;
  }

  .feature {
    padding: 2rem;
  }

  .feature-icon {
    font-size: 3rem;
    margin-bottom: 1.5rem;
  }

  .feature h3 {
    color: var(--navy);
    font-size: 1.3rem;
    margin-bottom: 1rem;
  }

  .feature p {
    color: var(--text-dark);
    opacity: 0.85;
  }

  /* CTA Section */
  .cta-section {
    padding: 6rem 2rem;
    background: linear-gradient(135deg, var(--navy) 0%, var(--navy-light) 100%);
    text-align: center;
    color: var(--text-light);
  }

  .cta-section h2 {
    font-size: 2.5rem;
    color: var(--gold);
    margin-bottom: 1rem;
  }

  .cta-section p {
    font-size: 1.25rem;
    margin-bottom: 2rem;
    opacity: 0.9;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero {
      min-height: 80vh;
    }

    .welcome-content {
      grid-template-columns: 1fr;
    }

    .quick-info {
      margin-top: 0;
    }

    .hero-buttons {
      flex-direction: column;
      align-items: center;
    }

    .btn {
      width: 100%;
      max-width: 250px;
    }
  }
</style>
